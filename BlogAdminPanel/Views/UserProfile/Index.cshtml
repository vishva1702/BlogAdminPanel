@model BlogAdminPanel.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Profile</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Users</li>
                <li class="breadcrumb-item active">Profile</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <img src="@Url.Content("~" + Model.Image)" alt="Profile" class="rounded-circle" style="max-width:200px;height:200px;" />

                        <h2>@Model.UserName</h2>
                        <h3>@Model.Role</h3>

                    </div>
                </div>
            </div>

            <!-- Profile Tabs -->
            <div class="col-md-8">
                <div class="card" style="height:500px">
                    <div class="card-body pt-3">
                        <!-- Tab Navigation -->
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                            </li>
                        </ul>

                        <!-- Tab Content -->
                        <div class="tab-content pt-2">
                            <!-- Overview Tab -->
                            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                <h5 class="card-title">Profile Details</h5>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Full Name</div>
                                    <div class="col-lg-9 col-md-8">@Model.UserName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@Model.Email</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Role</div>
                                    <div class="col-lg-9 col-md-8">@Model.Role</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Created On</div>
                                    <div class="col-lg-9 col-md-8">@Model.CreatedOn.ToString("dd MMM yyyy")</div>
                                </div>
                            </div>

                            <!-- Edit Profile Tab -->
                            <div class="tab-pane fade pt-3" id="profile-edit">
                                <form asp-controller="UserProfile" asp-action="EditProfileImage" method="post" enctype="multipart/form-data">
                                    @Html.AntiForgeryToken()

                                    <!-- Profile Image -->
                                    <div class="row mb-3">
                                        <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                        <div class="col-md-8 col-lg-9">
                                            <img src="@Url.Content("~" + Model.Image)" style="height: 200px; width: 200px;" alt="Profile" />
                                            <div class="pt-2" style="padding-left:25px;">
                                                <input type="file" name="profileImage" id="profileImageUpload" style="display:none;" onchange="this.form.submit();" />
                                                <label for="profileImageUpload" class="btn btn-primary btn-sm" title="Upload new profile image">
                                                    <i class="bi bi-upload"></i>
                                                </label>
                                                @* <button type="submit" formaction="/Profile/RemoveProfileImage" class="btn btn-danger btn-sm" title="Remove profile image">
                                                    <i class="bi bi-trash"></i>
                                                </button> *@
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Full Name -->
                                    <div class="row mb-3">
                                        <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="UserName" type="text" class="form-control" id="fullName" value="@Model.UserName">
                                        </div>
                                    </div>

                                    <!-- Email (Disabled) -->
                                    <div class="row mb-3">
                                        <label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="Email" type="email" class="form-control" id="email" value="@Model.Email" disabled>
                                        </div>
                                    </div>

                                    <!-- Save Changes Button -->
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Change Password Tab -->
                            <div class="tab-pane fade pt-3" id="profile-change-password">
                                <form asp-action="ChangePassword" method="post">
                                    @Html.AntiForgeryToken()

                                    <div class="row mb-3">
                                        <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="CurrentPassword" type="password" class="form-control" id="currentPassword" required>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="NewPassword" type="password" class="form-control" id="newPassword" required>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="ConfirmNewPassword" type="password" class="form-control" id="renewPassword" required>
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Change Password</button>
                                    </div>
                                </form>
                            </div>
                        </div><!-- End Tab Content -->
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Profile Section -->
</main>
