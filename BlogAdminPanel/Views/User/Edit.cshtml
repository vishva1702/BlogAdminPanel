@model BlogAdminPanel.Models.DTOs.UserUpdateDto

@{
    ViewData["Title"] = "Edit";
}

<main id="main" class="main">

    <div class="pagetitle">
    </div><!-- End Page Title -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="col-lg-6 mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-light text-dark">
                <h5 class="card-title mb-0">Edit User Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <!-- Floating Labels Form -->
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="UserName" class="form-control" id="floatingName" placeholder="Your Name" required />
                            <label for="floatingName">Username</label>
                            <div class="invalid-feedback">
                                Please provide a valid username.
                            </div>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="Your Email" required />
                            <label for="floatingEmail">Email</label>
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="floatingIsActive" />
                            <label for="floatingIsActive" class="form-check-label">Is Active</label>
                            <div class="invalid-feedback">
                                You must agree before submitting.
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form><!-- End Floating Labels Form -->
            </div>
        </div>
    </div>

</main><!-- End #main -->

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>