@model BlogAdminPanel.Models.User

@{
    ViewData["Title"] = "Assign Role";
}

<!-- Google Fonts -->
<link href="https://fonts.gstatic.com" rel="preconnect">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

<!-- Vendor CSS Files -->
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="~/vendor/quill/quill.snow.css" rel="stylesheet">
<link href="~/vendor/quill/quill.bubble.css" rel="stylesheet">
<link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
<link href="~/vendor/simple-datatables/style.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/css/style.css" rel="stylesheet">


<div class="container">
    <div class="card border-secondary">
        <div class="card-header bg-light text-dark">
            <h5 class="card-title mb-0">Assign Role</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="AssignRole" class="row g-3 needs-validation" novalidate>
                <div class="form-group mb-4">
                    <label asp-for="Role" class="form-label">Select Role</label>
                    <div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" asp-for="Role" value="Admin" id="RoleAdmin" />
                            <label class="form-check-label" for="RoleAdmin">
                                <i class="bi bi-shield-lock-fill text-primary"></i> Admin
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Role" value="Editor" id="RoleEditor" />
                            <label class="form-check-label" for="RoleEditor">
                                <i class="bi bi-pencil-fill text-info"></i> Editor
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="text-center">
                    <input type="submit" value="Assign Role" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
<script src="~/vendor/apexcharts/apexcharts.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/chart.js/chart.umd.js"></script>
<script src="~/vendor/echarts/echarts.min.js"></script>
<script src="~/vendor/quill/quill.js"></script>
<script src="~/vendor/simple-datatables/simple-datatables.js"></script>
<script src="~/vendor/tinymce/tinymce.min.js"></script>
<script src="~/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="~/js/main.js"></script>
