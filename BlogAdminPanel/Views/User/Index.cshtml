@model IEnumerable<BlogAdminPanel.Models.DTOs.UserCreateDto>

@{
    ViewData["Title"] = "Index";
}

<h1>User Details</h1>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">User Details</h5>

            <p>
                <a asp-action="Create" class="btn btn-success mb-3">Create New User</a>
            </p>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        int index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info btn-sm">Assign Role</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
