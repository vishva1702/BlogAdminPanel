<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-8">
                <div class="row">
                    <div class="row">
                        <!-- BlogPost Card -->
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card BlogPost-card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Blog Posts</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: #ffcccb;">
                                            <i class="bi bi-pencil"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>@Model.TotalBlogPosts</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End BlogPost Card -->
                        <!-- Users Card -->
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card Users-card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Users</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: #add8e6;">
                                            <i class="bi bi-person"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>@Model.TotalUsers</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Users Card -->
                        <!-- Tags Card -->
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card Tags-card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Tags</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: #f0e68c;">
                                            <i class="bi bi-tag"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>@Model.TotalTags</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Tags Card -->
                        <!-- Categories Card -->
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card Categories-card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Categories</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: #98fb98;">
                                            <i class="bi bi-list"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>@Model.TotalCategories</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Categories Card -->
                        <!-- Comments Card -->
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card Comments-card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Comments</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: #d3d3d3;">
                                            <i class="bi bi-chat-dots"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>@Model.TotalComments</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Comments Card -->
                    </div>
                    <!-- Reports -->
                    <div class="col-12">
                        <div class="card info-card sales-card">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>
                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Blogposts <span>/Today</span></h5>

                                <!-- Line Chart -->
                                <div id="reportsChart"></div>

                                <script>
                                    document.addEventListener("DOMContentLoaded", () => {
                                        const likesData = @Html.Raw(Json.Serialize(Model.LikesData));
                                        const sharesData = @Html.Raw(Json.Serialize(Model.SharesData));
                                        const viewsData = @Html.Raw(Json.Serialize(Model.ViewsData));

                                        new ApexCharts(document.querySelector("#reportsChart"), {
                                            series: [{
                                                name: 'Likes',
                                                data: likesData,
                                            }, {
                                                name: 'Shares',
                                                data: sharesData,
                                            }, {
                                                name: 'Views',
                                                data: viewsData,
                                            }],
                                            chart: {
                                                height: 350,
                                                type: 'area',
                                                toolbar: {
                                                    show: false
                                                },
                                            },
                                            markers: {
                                                size: 4
                                            },
                                            colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                            fill: {
                                                type: "gradient",
                                                gradient: {
                                                    shadeIntensity: 1,
                                                    opacityFrom: 0.3,
                                                    opacityTo: 0.4,
                                                    stops: [0, 90, 100]
                                                }
                                            },
                                            dataLabels: {
                                                enabled: false
                                            },
                                            stroke: {
                                                curve: 'smooth',
                                                width: 2
                                            },
                                            xaxis: {
                                                type: 'datetime',
                                                categories: [
                                                    "2023-01-01T00:00:00.000Z",
                                                    "2023-01-02T00:00:00.000Z",
                                                    "2023-01-03T00:00:00.000Z",
                                                    "2023-01-04T00:00:00.000Z",
                                                    "2023-01-05T00:00:00.000Z",
                                                    "2023-01-06T00:00:00.000Z",
                                                    "2023-01-07T00:00:00.000Z"
                                                ]
                                            },
                                            tooltip: {
                                                x: {
                                                    format: 'dd/MM/yy HH:mm'
                                                },
                                            }
                                        }).render();
                                    });
                                </script>
                                <!-- End Line Chart -->


                            </div>

                        </div>
                    </div><!-- End Reports -->
                    <!-- Recent Blog Posts -->
                    <div class="col-12">
                        <div class="card recent-blog-posts overflow-auto">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>
                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Recent Blog Posts <span>| Latest</span></h5>

                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Title</th>
                                            <th scope="col">Views</th>
                                            <th scope="col">Likes</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model.RecentBlogPosts)
                                        {
                                            <tr>
                                                <th scope="row"><a href="#">#@post.Id</a></th>
                                                <td>@post.Title</td>
                                                <td>@post.Views</td>
                                                <td>@post.Likes</td>
                                                <td><span class="badge @(post.Status == "Published" ? "bg-success" : "bg-warning")">@post.Status</span></td>
                                                <td>@post.CreatedDate.ToString("dd MMM yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!-- End Recent Blog Posts -->
                    <!-- Recent Blog Posts -->
                    <div class="col-12">
                        <div class="card recent-blogposts overflow-auto">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>
                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body pb-0">
                                <h5 class="card-title">Recent Blog Posts <span>| Latest</span></h5>

                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th scope="col">Title</th>
                                            <th scope="col">Created Date</th>
                                            <th scope="col">Views</th>
                                            <th scope="col">Likes</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model.RecentBlogPosts)
                                        {
                                            <tr>
                                                <td><a href="#" class="text-primary fw-bold">@post.Title</a></td>
                                                <td>@post.CreatedDate.ToString("MMM dd, yyyy")</td>
                                                <td class="fw-bold">@post.Views</td>
                                                <td>@post.Likes</td>
                                                <td>@post.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End Recent Blog Posts -->


                </div>
            </div><!-- End Left side columns -->
            <!-- Right side columns -->
            <div class="col-lg-4">

                <!-- Recent Activity -->
                <div class="card">
                    <div class="filter">
                        <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>Filter</h6>
                            </li>

                            <li><a class="dropdown-item" href="#">Today</a></li>
                            <li><a class="dropdown-item" href="#">This Month</a></li>
                            <li><a class="dropdown-item" href="#">This Year</a></li>
                        </ul>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">Recent Activity <span>| Today</span></h5>

                        <div class="activity">
                            @foreach (var post in Model.RecentBlogPosts)
                            {
                                var timeAgo = GetTimeAgo(post.CreatedDate); // Helper method to format the time ago
                                <div class="activity-item d-flex">
                                    <div class="activite-label">@timeAgo</div>
                                    <i class="bi bi-circle-fill activity-badge text-primary align-self-start"></i>
                                    <div class="activity-content">
                                        <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="fw-bold text-dark">@post.Title</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- End Recent Activity -->

                @* Helper function to calculate time ago *@
                @functions {
                    public string GetTimeAgo(DateTime date)
                    {
                        var timeSpan = DateTime.Now - date;
                        if (timeSpan.TotalDays >= 1)
                            return $"{timeSpan.Days} day(s) ago";
                        if (timeSpan.TotalHours >= 1)
                            return $"{timeSpan.Hours} hour(s) ago";
                        if (timeSpan.TotalMinutes >= 1)
                            return $"{timeSpan.Minutes} minute(s) ago";
                        return "Just now";
                    }
                }



                <!-- Blogpost pie chart  -->
                <div class="card">
                    <div class="filter">
                        <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>Filter</h6>
                            </li>

                            <li><a class="dropdown-item" href="#">Today</a></li>
                            <li><a class="dropdown-item" href="#">This Month</a></li>
                            <li><a class="dropdown-item" href="#">This Year</a></li>
                        </ul>
                    </div>

                    <div class="card-body pb-0">
                        <h5 class="card-title">Blogposts Traffic <span>| Today</span></h5>


                        <!-- Echart for traffic data -->
                        <div id="trafficChart" style="min-height: 400px;" class="echart"></div>

                        <script>
                            document.addEventListener("DOMContentLoaded", () => {
                                echarts.init(document.querySelector("#trafficChart")).setOption({
                                    tooltip: {
                                        trigger: 'item'
                                    },
                                    legend: {
                                        top: '5%',
                                        left: 'center'
                                    },
                                    series: [{
                                        name: 'Data Overview',
                                        type: 'pie',
                                        radius: ['40%', '70%'],
                                        avoidLabelOverlap: false,
                                        label: {
                                            show: false,
                                            position: 'center'
                                        },
                                        emphasis: {
                                            label: {
                                                show: true,
                                                fontSize: '18',
                                                fontWeight: 'bold'
                                            }
                                        },
                                        labelLine: {
                                            show: false
                                        },
                                        data: [
                                            {
                                                value: @Model.TotalBlogPosts,
                                                name: 'Blog Posts'
                                            },
                                            {
                                                value: @Model.TotalComments,
                                                name: 'Comments'
                                            },
                                            {
                                                value: @Model.TotalUsers,
                                                name: 'Users'
                                            },
                                            {
                                                value: @Model.TotalTags,
                                                name: 'Tags'
                                            },
                                            {
                                                value: @Model.TotalCategories,  <!-- Add Total Categories -->
                                                name: 'Categories'
                                            }
                                        ]
                                    }]
                                });
                            });
                        </script>
                    </div>
                </div><!-- Blogpost pie chart  -->



            </div><!-- End Right side columns -->

        </div>
    </section>

</main><!-- End #main -->
