@model IEnumerable<BlogAdminPanel.Models.Category>

@{
    ViewData["Title"] = "Categories - Index";
}

<style>
    body {
        background: linear-gradient(to bottom, #f8f9fa, #e3f2fd); /* Light gradient from white to light blue */
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
</style>

<h1>Categories</h1>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Categories Usage Statistics</h5>

            <p>
                <a asp-action="Create" class="btn btn-success mb-3">Create New Category</a>
            </p>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Number of Blog Posts</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">No categories found.</td>
                        </tr>
                    }
                    else
                    {
                        int index = 1;
                        foreach (var item in Model)
                        {
                            var blogPostCount = item.BlogPosts?.Count ?? 0;
                            <tr>
                                <th scope="row">@index</th>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@blogPostCount</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
