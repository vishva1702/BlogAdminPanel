@using BlogAdminPanel.Models.BlogAdminPanel.Models
@model IEnumerable<BlogPost>


@{
    ViewData["Title"] = "Index";
}

<main id="main" class="main">

    <div class="pagetitle">
    </div><!-- End Page Title -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @*    <h5 class="card-title">BlogPost Details</h5>
 *@
                @*  <p>
                    <a asp-action="Create" class="btn btn-success mb-3">Create Posts</a>
                    <a asp-action="Draft" class="btn btn-primary mb-3">View Draft Posts</a>
                    <a asp-action="Archive" class="btn btn-success mb-3">View Archived Posts</a>
                </p> *@

                <!-- Draft Posts Section -->
                <h5 class="card-title">Draft Post</h5>

                <table id="draftTable" class="table datatable table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model.Where(bp => bp.Status == "Draft"))
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>@post.Title</td>
                                <td>@post.Status</td>
                                <td>@post.Category?.Name</td>
                                <td>@post.Tag?.Name</td>
                                <td>
                                    <form asp-action="PublishDraft" asp-route-id="@post.Id" method="post" style="display:inline-block;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" style="border-width:2px;font-weight:600;" class="btn btn-outline-success btn-sm">Publish</button>
                                    </form>
                                    <button class="btn btn-outline-danger btn-sm" style="border-width:2px;font-weight:600;" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@post.Id" data-name="@post.Title">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the blog post <strong id="deletePostName"></strong>?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form id="deleteForm" asp-controller="BlogPosts" asp-action="Delete" method="post" style="display: inline;">
                                    <input type="hidden" id="deletePostId" name="id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>





    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const postId = button.getAttribute('data-id');
            const postName = button.getAttribute('data-name');

            // Set the post name in the modal
            const deletePostName = document.getElementById('deletePostName');
            deletePostName.textContent = postName;

            // Set the post ID in the hidden input
            const deletePostId = document.getElementById('deletePostId');
            deletePostId.value = postId;

            // Update the form action dynamically
            const deleteForm = document.getElementById('deleteForm');
            deleteForm.action = /BlogPosts/Delete/${postId};
        });
    </script>



</main><!-- End #main -->