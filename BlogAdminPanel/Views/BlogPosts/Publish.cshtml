@model BlogPost

@{
    ViewBag.Title = "Published Blog Post";
}

<style>
    body {
        background: linear-gradient(to bottom, #f8f9fa, #e3f2fd);
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .medium-image {
        width: 300px;
        height: auto;
        display: block;
    }

    .card {
        margin: 20px auto;
        max-width: 800px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
    }


    .blog-details p {
        margin: 5px 0;
    }
</style>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
<div class="card border-secondary mt-4">
    <div class="card-header bg-light text-dark">
        <h5 class="card-title mb-0"><b>Preview Blog Post Details</b></h5>
    </div>
    <div class="card-body">
        <h2 class="text-center">@Model.Title</h2>
        <div class="form-group mb-3">
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <p><strong>Tags:</strong> @Model.Tag?.Name</p>
            <p><strong>Published On:</strong> @Model.PublishedDate?.ToString("MMMM dd, yyyy")</p>
            <p><strong>Author:</strong> @Model.CreatedBy</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Title" class="medium-image" />
        }

        <div class="blog-content">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
