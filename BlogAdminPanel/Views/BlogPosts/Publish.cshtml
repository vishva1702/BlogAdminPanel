@model BlogPost

@{
    ViewBag.Title = "Published Blog Post";
}
<style>
    body {
        background: linear-gradient(to bottom, #f8f9fa, #e3f2fd); /* Light gradient from white to light blue */
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
</style>
<h1>@Model.Title</h1>

<div>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Tags:</strong> @Model.Tag?.Name</p>
    <p><strong>Published On:</strong> @Model.PublishedDate?.ToString("MMMM dd, yyyy")</p>
    <p><strong>Author:</strong> @Model.CreatedBy</p>
</div>

@if (!string.IsNullOrEmpty(Model.Image))
{
    <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded my-3" />
}

<div>
    @Html.Raw(Model.Content)
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Blog Posts</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
</div>
