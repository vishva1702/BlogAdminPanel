@model BlogPost

@{
    ViewBag.Title = "UnArchive Blog Post";
}
<style>
    body {
        background: linear-gradient(to bottom, #f8f9fa, #e3f2fd); /* Light gradient from white to light blue */
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
</style>
<h1>UnArchive Blog Post</h1>

<p>Are you sure you want to unarchive the blog post titled "<strong>@Model.Title</strong>"?</p>

<div>
    <h3>Details</h3>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Tags:</strong> @Model.Tag?.Name</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="UnArchiveConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-primary">Yes, UnArchive</button>
    <a asp-action="Archive" class="btn btn-secondary">Cancel</a>
</form>
